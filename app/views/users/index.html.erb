

<%= render 'userinfo', user: @user %>
<h2>Users</h2>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>animal name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(50,50) %></td>
      <td><%= user.name %></td>
      <td><%= user.animal_name %></td>
      <td><%= link_to "show", user_path(user.id) %></td>
    </tr>
  </tbody>
</table>
 

  