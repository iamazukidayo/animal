

<h2>Today's diary　<i class="fa-solid fa-pen-nib"></i></h2>
<% form_with model: @diary do |f| %>

  <h4>image</h4>
  <%= f.file_field :image, accept : "image/*" %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>diary</h4>
  <%= f.text_area :body %>

  <!--<h4>day</h4>-->
  <!--%= @diary.created_at.strftime('%Y/%m/%d') %>-->
  
  <% f.submit '投稿' %>
<% end %>
